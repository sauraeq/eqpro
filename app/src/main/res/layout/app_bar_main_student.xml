<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/student_back"
        android:layout_width="match_parent"
        android:background="@drawable/rounded_corner_test"
        android:layout_height="match_parent" />








        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:background="@color/colorPrimaryDark"
            android:layout_height="?attr/actionBarSize"
           >


            <RelativeLayout
                android:layout_width="match_parent"
                android:padding="12dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/logo"
                    android:layout_width="40dp"
                    android:gravity="center"

                    android:background="@drawable/circle"

                    android:layout_height="40dp">

                    <ImageView

                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:padding="5dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/logoss" />

                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/logo"
                    android:text="Equal Infotech"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/menu"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    android:src="@drawable/menu" />


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_toLeftOf="@+id/menu"
                    android:src="@drawable/notification" />



            </RelativeLayout>






        </androidx.appcompat.widget.Toolbar>








    <include layout="@layout/content_main_student" />



    <LinearLayout
        android:layout_width="match_parent"
        android:elevation="3dp"
        android:layout_gravity="bottom"
        android:background="@drawable/rounded_corner_top"
        android:layout_alignParentBottom="true"
        android:layout_height="50dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"

                android:weightSum="4"
                android:layout_height="45dp">



                <LinearLayout
                    android:id="@+id/linear_home"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/home"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:padding="3dp"
                        android:src="@drawable/ic_home_black_24dp_red"
                        android:layout_height="0dp" />

                    <TextView
                        android:id="@+id/text_home"
                        android:layout_width="match_parent"
                        android:layout_weight="0.5"
                        android:text="Home"
                        android:textSize="10sp"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:textColor="@color/colorPrimary"
                        android:layout_height="0dp" />


                </LinearLayout>



                <LinearLayout
                    android:id="@+id/linear_punchin"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/punch_in_image"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:padding="3dp"
                        android:src="@drawable/ic_perm_contact_calendar_black_24dp"
                        android:layout_height="0dp" />

                    <TextView
                        android:id="@+id/text_punchin"
                        android:layout_width="match_parent"
                        android:layout_weight="0.5"
                        android:text="Punching"
                        android:textSize="10sp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="0dp" />


                </LinearLayout>





                <LinearLayout
                    android:id="@+id/linear_gallery"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/gallery"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:padding="3dp"
                        android:src="@drawable/ic_person_black_24dp"
                        android:layout_height="0dp" />

                    <TextView
                        android:id="@+id/text_setting"
                        android:layout_width="match_parent"
                        android:layout_weight="0.5"
                        android:text="Profile"
                        android:textSize="10sp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="0dp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear_logout"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:padding="3dp"
                        android:src="@drawable/ic_power_settings_new_black_24dp"
                        android:layout_height="0dp" />

                    <TextView
                        android:id="@+id/text_logout"
                        android:layout_width="match_parent"
                        android:layout_weight="0.5"
                        android:text="Logout"
                        android:textSize="10sp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="0dp" />


                </LinearLayout>


            </LinearLayout>





    </LinearLayout>







</androidx.coordinatorlayout.widget.CoordinatorLayout>
